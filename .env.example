# CareLinkAI Environment Variables
# Copy this file to .env and fill in your values

# =============================================
# Application Settings
# =============================================
APP_NAME=CareLinkAI
NEXTAUTH_URL=http://localhost:5002
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars

# =============================================
# Database Configuration
# =============================================
DATABASE_URL="postgresql://postgres:password@localhost:5433/carelinkai"

# =============================================
# Email Configuration
# =============================================
# Default sender information
EMAIL_FROM=noreply@carelinkai.com
EMAIL_FROM_NAME=CareLinkAI

# ---------------------------------------------
# Option 1: SendGrid (Recommended for Production)
# ---------------------------------------------
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ---------------------------------------------
# Option 2: SMTP Configuration (Gmail, Outlook, etc)
# ---------------------------------------------
# For Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password  # Use App Password, not regular password
# SMTP_SECURE=false

# For Outlook/Office365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASSWORD=your-password
# SMTP_SECURE=false

# For Custom SMTP:
# SMTP_HOST=mail.yourcompany.com
# SMTP_PORT=465
# SMTP_USER=noreply@yourcompany.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_SECURE=true  # Use true for port 465, false for port 587

# =============================================
# Stripe Configuration (for payments)
# =============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================
# Storage Configuration (for file uploads)
# =============================================
# AWS S3 Configuration
# S3_BUCKET_NAME=carelinkai-storage
# S3_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================
# Marketplace Feature Flag
# =============================================
# Toggle Marketplace module (true = enabled, false = disabled)
NEXT_PUBLIC_MARKETPLACE_ENABLED=true
# =============================================
# Observability (Sentry)
# =============================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================
# AWS S3 (Production)
# =============================================
AWS_REGION=us-west-2
AWS_S3_BUCKET=carelinkai-credentials
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false
